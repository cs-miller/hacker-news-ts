{
  "name": "hacker-news-ts",
  "version": "1.0.0",
  "description": "a hacker news frontend written in typescript",
  "repository": {
    "url": "https://github.com/cs-miller/hacker-news-ts"
  },
  "scripts": {
    "build": "TS_NODE_PROJECT=\"webpack-tsconfig.json\" webpack --require ts-node/register",
    "build:prod": "NODE_ENV='production' yarn build",
    "serve": "ts-node --project ./webpack-tsconfig.json ./node_modules/.bin/webpack-serve",
    "generate": "apollo-codegen generate src/**/*.tsx --project-name hacker-news-ts --target typescript-modern --add-typename"
  },
  "author": "Christopher Miller",
  "license": "MIT",
  "resolutions": {
    "graphql": "^0.13.2"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.2.2",
    "apollo-client": "^2.3.2",
    "apollo-link": "^1.2.2",
    "apollo-link-error": "^1.0.9",
    "apollo-link-http": "^1.5.4",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "react": "^16.4.0",
    "react-apollo": "^2.1.4",
    "react-dom": "^16.4.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^2.30.3",
    "@types/node": "^10.3.0",
    "@types/react": "^16.3.16",
    "@types/react-dom": "^16.0.5",
    "@types/webpack": "^4.4.0",
    "apollo-codegen": "^0.19.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-graphql-tag": "^1.6.0",
    "babel-preset-env": "^1.7.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "prettier": "^1.13.4",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.1.0",
    "tsconfig-paths": "^3.3.2",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "webpack": "^4.10.2",
    "webpack-command": "^0.2.0",
    "webpack-serve": "^1.0.2"
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
